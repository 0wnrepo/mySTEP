"/*"			{ comment(0); }
"//"			{ comment(1); }
"# [0-9]* \".*\" [0-9]*" { /* handle */ }	/* try to ignore line markers generated by preprocessor */

	/* identifiers and keywords */

{L}({L}|{D})*  { 
	int s;
	charCount();
	/* FIXME: obj-c method names may be any identifier, i.e. it is perfectly legal to define a method - (void) continue; */
	// so we may have to tell the scanner if we want to see a keyword or an arbitrary identifier
	// this can be done by some global variable being set once in the syntax, e.g.
	// selector: { nokeyword=1; } IDENTIFIER
	//          | selector ':' {Ênokeyword=1; } IDENTIFIER
	// and id, BOOL, sel should go similar
	// {Êobjctype=1; } BOOL
	// d.h. wenn objctype nicht 1 ist wird BOOL wie ein normaler IDENTIFIER gemeldet
	// Flags werden dann sofort zurŸckgesetzt
	s=lookup(symtab, yytext);
	if(type(s) == 0)
		setType(s, IDENTIFIER);	/* new entry */
	yylval=s;
	if(right(s))
		return TYPE_NAME;	/* typedef'd type name */
	return type(s);	/* keyword or plain identifier */
} 

	/* numeral CONSTANTs */
0[xX]{H}+{IS}?		{ charCount(); yylval=cons(yytext); return(CONSTANT); }
0{D}+{IS}?			{ charCount(); yylval=cons(yytext); return(CONSTANT); }
{D}+{IS}?			{ charCount(); yylval=cons(yytext); return(CONSTANT); }
L?'(\\.|[^\\'])+'	{ charCount(); yylval=cons(yytext); return(CONSTANT); }

{D}+{E}{FS}?		{ charCount(); yylval=cons(yytext); return(CONSTANT); }
{D}*"."{D}+({E})?{FS}?	{ charCount(); yylval=cons(yytext); return(CONSTANT); }
{D}+"."{D}*({E})?{FS}?	{ charCount(); yylval=cons(yytext); return(CONSTANT); }

	/* string CONSTANTs */

L?\"(\\.|[^\\"])*\"	{ charCount(); yylval=cons(yytext); return(STRING_LITERAL); }
@\"(\\.|[^\\"])*\"			{ charCount(); yylval=cons(yytext); return(AT_STRING_LITERAL); }

	/* standard operators */

"..."			{ charCount(); return(ELLIPSIS); }
